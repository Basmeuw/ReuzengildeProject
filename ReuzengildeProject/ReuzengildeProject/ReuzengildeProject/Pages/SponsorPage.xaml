<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReuzengildeProject.Pages.SponsorPage"
              Icon="Hamburger.png"
             Title="Sponsoren">
    <ContentPage.Content>
        <AbsoluteLayout BackgroundColor="#e0dddd">
            <BoxView Color="#00758b"
                 AbsoluteLayout.LayoutBounds="0, 1, 1, 0.11" AbsoluteLayout.LayoutFlags="All"
                 Opacity="1"/>
            <!--maakt blauw vak onderaan scherm-->

            <BoxView Color="#666666"
                 AbsoluteLayout.LayoutBounds="0.5, 0.026, 0.77, 0.07" AbsoluteLayout.LayoutFlags="All"
                 Opacity="1" />
            <!--maakt rand om label van titel-->

            <Label Text ="Sponsoren"
                   HorizontalTextAlignment="Center"
                   TextColor="White"
                   FontSize="Medium"
                   BackgroundColor="#00758b"
                   AbsoluteLayout.LayoutBounds="0.5, 0.03, 0.75, 0.055" AbsoluteLayout.LayoutFlags="All"/>

            <BoxView BackgroundColor="Black"
                     AbsoluteLayout.LayoutBounds="0.2, 0.15, 0.3, 0.22" AbsoluteLayout.LayoutFlags="All">
            </BoxView>
            <BoxView BackgroundColor="Black"
                     AbsoluteLayout.LayoutBounds="0.8, 0.15, 0.3, 0.22" AbsoluteLayout.LayoutFlags="All">
            </BoxView>
        </AbsoluteLayout>




    </ContentPage.Content>
</ContentPage>