<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReuzengildeProject.Pages.HamburgerPage">
    <MasterDetailPage.Master>
        <ContentPage Title="Master">
            
            <StackLayout x:Name="stackLayout">
                <Image x:Name="image" Source="HamburgerMenuImage.png"/>
                <Button x:Name="HomeButton"
                        Text="Home"
                        Clicked="HomeButtonClicked"/>
                <Button x:Name="OptochtButton"
                        Text="Optocht"
                        Clicked="OptochtButtonClicked"/>
                <Button x:Name="DeelnemersButton"
                        Text="Deelnemers"
                        Clicked="DeelnemersButtonClicked"/>
                <Button x:Name="RouteButton"
                        Text="Route"
                        Clicked="RouteButtonClicked"/>
                <Button x:Name="OverButton"
                        Text="Over"
                        Clicked="OverButtonClicked"/>
            </StackLayout>
        </ContentPage>
            
    </MasterDetailPage.Master>
</MasterDetailPage>